<!-- form_withにオプション追記 -->
<%= form_with model: @book, url: '/books',method: :post do |f| %>
  <div class="field">
   <lavel for ="book_title">Title</lavel>
   <div><%= f.text_field :title %></div>
  </div>

  <div class="field">
   <label for="book_body">Body</lavel>
   <div><%= f.text_area :body %></div>
  </div>

  <div><%= f.submit 'Create Book' %></div>
<% end %>
